---
layout: default
image_sliders: slider1
---

<div class="home">
    <style scoped>
        {% assign image = site.header_feature_image | relative_url | split: '.' %}
        .call-out_img {
            background-image: url('{{ image | join: '.' }}');
        }
        {% if site.header_feature_image_responsive %}
        @media screen and (max-width: 768px) {
            .call-out_img {
                background-image: url('{{ image[0] | append: '-medium.' | append: image[1] | default: image}}');
            }
        }
        @media screen and (max-width: 576px) {
            .call-out_img {
                background-image: url('{{ image[0] | append: '-small.' | append: image[1] }}');
            }
        }
        {% endif %}
    </style>
    <div id="main" class="call-out call-out_img">
        {% capture header_text %}{% t site.header_text %}{% endcapture %}
        <h1 style="color:#e6e6e6;font-family:Papyrus;"> {{ header_text | default: "Change <code>header_text</code> in <code>_config.yml</code>"}} </h1>
    </div>
    <div style="text-align:left;">
        <p>/assets/audio/LaGuanena.mp3?autoplay=1&loop=1</p>
    </div>
    <div style="text-align:center;">
        {% capture subheader %}{% t subheader %}{% endcapture %}
        <h1> {{ subheader }} </h1>
    </div>
    {% include slider.html selector="slider1" %}
</div>
